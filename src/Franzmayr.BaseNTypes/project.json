{
  "title": "Franzmayr.BaseNTypes",
  "description": ".NET Standard Types and Validators library for Base16-, Base32- and Base64-encoding and decoding in several variations (i. e., Base32Hex, Base64 Url safe, etc.)",
  "version": "1.0.0-*",
  "authors": [ "Peter Franzmayr" ],
  "copyright": "Copyright 2016-2017 Franzmayr Peter",
  "frameworks": {
    "net40": {
      "buildOptions": {
        "debugType": "full"
      }
    },
    "netstandard1.0": {
      "buildOptions": {
        "debugType": "portable"
      },
      "dependencies": {
          "System.Collections": "4.3.0",
          "System.Linq": "4.3.0",
          "System.Runtime": "4.3.0",
          "System.Runtime.Extensions": "4.3.0",
          "System.Text.Encoding": "4.3.0",
          "System.Text.RegularExpressions": "4.3.0"
      }
    }
  },
  "packOptions": {
    "summary": "Base16-, Base32-, Base32 extended hex-, Base64 and Base64 Url safe N Types and Validators",
    "licenseUrl": "https://github.com/Franzmayr/BaseNTypes/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/Franzmayr/BaseNTypes"
    },
    "tags": [ "BaseN", "Base16", "Base32", "Base32-Hex", "Base64", "Base64-Urlsafe", "DotNet Core", ".NetStandard" ],
  }
}
